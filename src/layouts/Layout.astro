---
import Footer from "@/components/home/Footer.astro";
import Header from "@/components/home/Header.astro";
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";

const {
  title = "Desarrollador Web Freelance | Maquetación y Sitios Modernos — Ibrahim Sanusi",
  canonical,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`https://ibrasanusi.com/${canonical ?? ""}`} />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title}
    </title>
    <meta
      name="description"
      content="Diseño sitios web totalmente responsivas, optimizadas para SEO y conversiones, con mucha atención a la experiencia de usuario."
    />
    <meta
      name="keywords"
      content="programador web, desarrollo web, maquetación web, sitios web, freelance, HTML, CSS, JavaScript, diseñador web en madrid"
    />
  </head>
  <body>
    <Header />
    <slot />
    <Analytics />
    <Footer />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #000000;
    color: #ffffff;
    overflow-x: hidden;
    position: relative;
  }
</style>
