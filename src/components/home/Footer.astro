---
import GitHubIcon from "../ui/icons/GitHubIcon.astro";
import LinkedInIcon from "../ui/icons/LinkedInIcon.astro";
import UpWorkIcon from "../ui/icons/UpWorkIcon.astro";
---

<footer class="px-4 mt-16">
  <div class="flex flex-col gap-8 py-14 max-w-4xl m-auto w-full">
    <span class="text-2xl leading-6"
      >Creemos juntos <br /><span class="text-brand-secondary"
        >algo asombroso</span
      >.</span
    >

    <ul class="space-y-2">
      <li class="text-white">Pages</li>
      <li class="text-brand-secondary">Shop</li>
      <li class="text-brand-secondary">Work</li>
      <li class="text-brand-secondary">About</li>
      <li class="text-brand-secondary">Contact</li>
    </ul>

    <!-- Social Media -->
    <div class="flex flex-row gap-6">
      <a href="/github"><GitHubIcon class="size-6 text-white" /></a>
      <a href="/LinkedIn"><LinkedInIcon class="size-2 text-white" /></a>
      <a href="/upwork"><UpWorkIcon class="size-2" /></a>
    </div>
  </div>
</footer>

<style>
  footer {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px); /* Para Safari */
    background: radial-gradient(rgba(0, 0, 0, 0.5), rgba(255, 255, 255, 0.1));
  }
</style>
