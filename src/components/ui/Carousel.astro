---
const badges = [
  "Dise√±o Web",
  "SEO",
  "Animaciones",
  "Ecommerce",
  "Next.js",
  "React.js",
];
---

<article id="carousel" class="m-auto flex w-80 overflow-x-auto">
  {
    Array.from({ length: 3 }).map(() => (
      <ul
        id="carousel-group"
        class="flex flex-row gap-2 pr-2 justify-center items-center animate-[spin_10s_linear_infinite]"
      >
        {
          // Duplicamos los elementos para lograr el efecto infinito
          Array.from({ length: 1 }).map(() =>
            badges.map((badge) => (
              <li class="py-1.5 px-4 basis-[5em] text-nowrap rounded-full text-xs bg-brand-fifth border border-brand-fifth-dark text-center font-medium">
                {badge}
              </li>
            ))
          )
        }
      </ul>
    ))
  }
</article>

<style>
  #carousel {
    -ms-overflow-style: none; /* IE/Edge */
    scrollbar-width: none; /* Firefox */

    mask-image: linear-gradient(
      to right,
      rgba(0, 0, 0, 0) 0%,
      rgb(0, 0, 0) 12.5%,
      rgb(0, 0, 0) 87.5%,
      rgba(0, 0, 0, 0) 100%
    );

    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    ); /* necesario para Safari */
  }

  @keyframes spin {
    from {
      translate: 0;
    }
    to {
      translate: -100%;
    }
  }
</style>
