---
import ArrowRight from "@/components/ui/icons/ArrowRight.astro";
import "../../styles/global.css";
import Layout from "@/layouts/Layout.astro";
type BlogPost = {
  url: string;
  frontmatter: {
    title: string;
    pubDate: string | Date;
    description?: string;
    author?: string;
    tags?: string[];
  };
};

const posts = Object.values(
  import.meta.glob("./*.md", { eager: true })
) as BlogPost[];
---

<Layout
  title="Blog de Desarrollo Web y Emprendimiento — Consejos, Ideas y Recursos | Ibrahim Sanusi"
  description="Artículos sobre desarrollo web, maquetación, frontend, herramientas, productividad y emprendimiento digital. Recursos prácticos para mejorar tu presencia online y atraer clientes."
  canonical="blog"
>
  <main class="space-y-16 max-w-4xl m-auto p-[140px_16px_40px_16px]">
    <nav class="text-gray-second gap-2 flex justify-center">
      <a class="hover:underline" href="/">Inicio</a>
      <span aria-hidden="true">/</span>
      <span
        class="text-brand text-ellipsis overflow-hidden max-w-[20ch] md:w-auto md:w-max-[32ch] whitespace-nowrap"
        >Blog</span
      >
    </nav>

    <h1 class="text-7xl font-bold mb-2 text-white text-center">
      Artículos sobre
    </h1>
    <p class="text-center text-gray-second">
      Aquí es donde publico lo nuevo que he aprendido y crea que puede aprotar
      valor
    </p>

    <ul>
      {
        posts.map((post) => (
          <li>
            <a
              href={post.url}
              class="py-4 group border-b border-b-white/20 flex items-center justify-between"
            >
              <div class="relative">
                <div class="size-2 absolute bg-brand rounded-full basis-2 opacity-0 transition-[translate_position] duration-400 group-hover:opacity-100 group-hover:left-0 top-1/2 -translate-y-1/2 -left-2 ease-out" />
                <div class="block transform group-hover:translate-x-4 transition-transform duration-600 ease-out">
                  <div class="flex flex-col gap-2">
                    <span class="text-lg text-balance text-white/90">
                      {post.frontmatter.title}
                    </span>
                  </div>
                </div>
              </div>

              <div class="shrink-0 relative cursor-pointer p-2 rounded-full border size-10 border-white/20 transform group-hover:bg-brand group-hover:text-black transition-colors">
                <ArrowRight class="absolute top-1/2 left-1/2 transform -translate-1/2" />
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
